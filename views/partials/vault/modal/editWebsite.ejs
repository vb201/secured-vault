<div class="modal fade" id="editWebsite" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Edit Website</h5><button type="button" class="btn-close"
          data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="card-body p-5">
          <% include ../../../partials/messages %>
          
          <form id="editWebsiteForm" action="" method="POST" novalidate="" autocomplete="off">

            <div class="input-group mb-3">
              <label class="input-group-text text-muted" for="name" style="width: 38%;">
                Name
              </label>
              <input id="editWebsiteName" type="text" class="form-control" value="<%= typeof name != 'undefined' ? name : '' %>" name="editWebsiteName" autofocus />
            </div>
          
            <div class="input-group mb-3">
              <label class="input-group-text text-muted" for="url" style="width: 38%;">
                Url
              </label>
              <input id="editWebsiteUrl" type="text" class="form-control" value="<%= typeof url != 'undefined' ? url : '' %>" name="editWebsiteUrl"/>
            </div>
          
            <div class="input-group mb-3">
              <label class="input-group-text text-muted" style="width: 38%;" for="email">
                E-Mail Address 
              </label>
              <input id="editWebsiteEmail" type="email" class="form-control" value="<%= typeof email != 'undefined' ? email : '' %>" name="editWebsiteEmail"/>
            </div>
          
            <div class="input-group mb-3">
              <label class="input-group-text text-muted" for="password" style="width: 38%;">
                Password
              </label>
              <input id="editWebsitePassword" type="text" class="form-control" value="<%= typeof password != 'undefined' ? password : '' %>" name="editWebsitePassword"/>
            </div>

            <div class="d-flex align-items-center">
              <button type="submit" value="add" class="btn btn-primary ms-auto">
                Edit website
              </button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
