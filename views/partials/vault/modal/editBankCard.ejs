<div class="modal fade" id="editBankCard" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Edit Bank Card</h5><button type="button" class="btn-close"
          data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="card-body p-5">
          <% include ../../../partials/messages %>

            <form id="editBankCardForm" action="" method="POST" novalidate="" autocomplete="off">
              <div class="input-group mb-3">
                <label class="input-group-text text-muted" for="name" style="width: 35%;">
                  Name
                </label>
                <input id="editBankCardName" type="text" class="form-control" name="editBankCardName" value="" autofocus />
              </div>
              <div class="input-group mb-3">
                <label class="input-group-text text-muted" for="device" style="width: 35%;">
                  Card Number
                </label>
                <input id="editBankCardCardNumber" type="text" class="form-control" name="editBankCardCardNumber" value="" />
              </div>
              <div class="input-group mb-3">
                <label class="input-group-text text-muted" for="holderName" style="width: 35%;">
                  Holder Name
                </label>
                <input id="editBankCardHolderName" type="text" class="form-control" name="editBankCardHolderName" value="" />
              </div>
              <div class="input-group mb-3">
                <label class="input-group-text text-muted" for="expiry">
                  Expiry
                </label>
                <input id="editBankCardExpiry" type="tel" class="form-control" name="editBankCardExpiry" value="" />
                <label class="input-group-text text-muted" for="cvv">cvv/cvc
                </label>
                <input id="editBankCardCVV" type="text" class="form-control" name="editBankCardCVV" value="" />
              </div>

              <div class="d-flex align-items-center">
                <button type="submit" value="add" class="btn btn-primary ms-auto">Edit Bank card </button>
              </div>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>