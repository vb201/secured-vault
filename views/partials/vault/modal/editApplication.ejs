<div class="modal fade" id="editApplication" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Edit Application</h5><button type="button" class="btn-close"
          data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="card-body p-5">
            <% include ../../../partials/messages %>
            <form id="editApplicationForm" action="" method="POST" novalidate="" autocomplete="off">
              <div class="input-group mb-3">
                <label class="input-group-text text-muted" for="name" style="width: 38%;">
                  Name
                </label>
                <input id="editApplicationName" type="text" class="form-control" name="editApplicationName" value="" autofocus />
              </div>

              <div class="input-group mb-3">
                <label class="input-group-text text-muted" for="device" style="width: 38%;">
                  Device
                </label>
                <input id="editApplicationDevice" type="text" class="form-control" name="editApplicationDevice" value="" />
              </div>

              <div class="input-group mb-3">
                <label class="input-group-text text-muted" for="email" style="width: 38%;">
                  E-Mail Address
                </label>
                <input id="editApplicationEmail" type="email" class="form-control" name="editApplicationEmail" value="" />
              </div>

              <div class="input-group mb-3">
                <label class="input-group-text text-muted" for="password" style="width: 38%;">
                  Password
                </label>
                <input id="editApplicationPassword" type="text" class="form-control" name="editApplicationPassword" />
              </div>

              <div class="d-flex align-items-center">
                <button type="submit" value="add" class="btn btn-primary ms-auto">Edit Application</button>
              </div>

            </form>
        </div>
      </div>
    </div>
  </div>
</div>