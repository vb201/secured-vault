<% if(typeof errors != 'undefined') { %> <% errors.forEach(function(error) { %>

<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <%= error.msg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% }) %> <% } %> <% if(successMsg != '') { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= successMsg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(errorMsg != '') { %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <%= errorMsg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(error != '') { %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
